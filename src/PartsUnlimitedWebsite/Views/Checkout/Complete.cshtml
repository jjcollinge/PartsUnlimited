@model PartsUnlimited.Models.Order

@{
    ViewBag.Title = "Checkout Complete";
}
<section id="complete-page">
    <h2>Checkout Complete</h2>

    <div class="row">
        <div class="col-sm-12">
            <p>Thanks for your order!</p>
            <p>Your order number is: @Model.OrderId</p>
            <p>Order Date: @Model.OrderDate.ToShortDateString()</p>
            <p>
                You can @Html.ActionLink("view your order", "Details", "Orders", new { id = @Model.OrderId }, new { @class = "action-link" }) from your account page.
            </p>
            <br />
            <p>
                @{
                    string donationPrompt = string.Empty;
                    decimal donationAmount = 0;
                    donationAmount = Math.Ceiling(Model.Total) - Model.Total;
                    if ((float)donationAmount < 0.01) { donationAmount = 0.01M; };
                        donationPrompt += $"Would you like to donate {donationAmount.ToString("C")} to charity?";
                } @donationPrompt
            </p>
            <p>
                <input type="button" id="donateBtn" value="Donate" />
            </p>
            <br />
            <p>
                @Html.ActionLink("Keep Shopping", "Index", "Home", null, new { @class = "btn" })
            </p>

        </div>
    </div>
</section>
